{% extends 'baseAdmin.html.twig' %}

{% block title %} {{parent()}}Languages {% endblock %}

{% block body %}
<div class="container m-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center"> Gestion des technologies </h2>
                <table class="table table-hover table-borderless table-sm text-center">
                    <thead class="border-bottom">
                        <tr>
                            <th scope="col">N°</th>
                            <th scope="col">Languages</th>
                            <th scope="col">Image</th>
                            <th scope="col">Niveau</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for skill in skills %}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{ skill.name }}</td>
                            <td>{{ skill.img }}</td>
                            <td>{{ skill.level }}</td>
                            <td>
                                <a href="{{ path('skillUpdate', {'id':skill.id}) }}"><i class="far fa-edit"></i></a> | <a href="{{ path('skillDelete', {'id':skill.id}) }}"><i class="far fa-trash-alt"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="col-12 m-3 text-center">
                <br><a class="btn btn-outline-dark" href="{{ path('skillCreate') }}">Ajouter une compétence</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
